<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1 class="">List Kontak</h1>

            <a href="/contact/add" class="btn btn-primary mb-3">Tambah Kontak</a>

            <% if (msg.length !== 0) { %>
             <div class="alert alert-success" role="alert">Contact Berhasil Ditambahkan</div>
            <% } %>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Nomer</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger" role="alert">
                                Tidak Ada Kontak Terdaftar
                            </div>
                        </td>
                    </tr>
                <% } %>
                <tbody>
                    <% contacts.forEach((contact, i) => { i++ %>                     
                        <tr>
                            <th scope="row"><%= i++ %></th>
                            <td><%= contact.nama %></td>
                            <td><%= contact.noHp %></td>
                            <td>
                                <a href="/contact/<%= contact.nama %>" class="badge rounded-pill text-bg-info">Details</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>  
    </div>
</div>
